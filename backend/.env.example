# ==============================================
# Server Configuration
# ==============================================
PORT=3000
NODE_ENV=development
API_PREFIX=api/v1

# ==============================================
# Database (PostgreSQL via Supabase or local)
# ==============================================
# Local development example:
# DATABASE_URL="postgresql://postgres:yourpassword@localhost:5432/ecommerce_admin?schema=public"
# 
# Supabase connection string (find in Project Settings > Database > Connection string > URI):
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-ID].supabase.co:5432/postgres"

# ==============================================
# Redis Cache (optional but recommended)
# ==============================================
REDIS_URL="redis://localhost:6379"

# ==============================================
# Authentication & Security
# ==============================================
# IMPORTANT: Generate strong random secrets for production!
# You can generate secure secrets using:
#   - Node.js: require('crypto').randomBytes(32).toString('hex')
#   - OpenSSL: openssl rand -base64 32
#   - Online: https://randomkeygen.com/

JWT_SECRET="CHANGE_THIS_TO_A_RANDOM_256_BIT_SECRET_IN_PRODUCTION"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="CHANGE_THIS_TO_ANOTHER_RANDOM_256_BIT_SECRET_IN_PRODUCTION"
JWT_REFRESH_EXPIRES_IN="7d"

# ==============================================
# Frontend Configuration
# ==============================================
# For CORS and email links
# Local development (Vite default):
FRONTEND_URL="http://localhost:5173"
# Production:
# FRONTEND_URL="https://yourdomain.com"

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3001"

# ==============================================
# File Storage
# ==============================================
# ImageKit (recommended for image optimization)
IMAGEKIT_PUBLIC_KEY="public_YOUR_PUBLIC_KEY_HERE"
IMAGEKIT_PRIVATE_KEY="private_YOUR_PRIVATE_KEY_HERE"
IMAGEKIT_URL_ENDPOINT="https://ik.imagekit.io/YOUR_IMAGEKIT_ID"

# AWS S3 (alternative for file storage)
AWS_ACCESS_KEY_ID="YOUR_AWS_ACCESS_KEY_ID"
AWS_SECRET_ACCESS_KEY="YOUR_AWS_SECRET_ACCESS_KEY"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-bucket-name"

# Cloudinary (alternative for image hosting)
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# ==============================================
# Payment Gateways
# ==============================================
# Stripe (recommended)
# Find these in Stripe Dashboard > Developers > API keys
STRIPE_SECRET_KEY="sk_test_YOUR_STRIPE_SECRET_KEY"
STRIPE_WEBHOOK_SECRET="whsec_YOUR_WEBHOOK_SECRET"

# PayPal
PAYPAL_CLIENT_ID="YOUR_PAYPAL_CLIENT_ID"
PAYPAL_SECRET="YOUR_PAYPAL_SECRET"
PAYPAL_MODE="sandbox" # sandbox or live

# Razorpay (for Indian market)
RAZORPAY_KEY_ID="YOUR_RAZORPAY_KEY_ID"
RAZORPAY_KEY_SECRET="YOUR_RAZORPAY_KEY_SECRET"

# ==============================================
# Email Service
# ==============================================
# Resend (recommended - simple and reliable)
RESEND_API_KEY="re_YOUR_RESEND_API_KEY"
EMAIL_FROM="noreply@yourdomain.com"

# SendGrid (alternative)
# SENDGRID_API_KEY="SG.YOUR_SENDGRID_API_KEY"

# ==============================================
# Rate Limiting & Throttling
# ==============================================
RATE_LIMIT_TTL=60000 # Time window in milliseconds (60 seconds)
RATE_LIMIT_MAX=100 # Max requests per time window

# ==============================================
# Logging & Monitoring (optional)
# ==============================================
# LOG_LEVEL=info # debug, info, warn, error
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# ==============================================
# Feature Flags (optional)
# ==============================================
# ENABLE_REGISTRATION=true
# ENABLE_EMAIL_VERIFICATION=false
# ENABLE_TWO_FACTOR_AUTH=false
