# Server Configuration
PORT=3000
NODE_ENV=development

# Database (Supabase)
# Find this in Supabase Project Settings > Database > Connection string > URI
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-ID].supabase.co:5432/postgres"

# Authentication
# You can generate a random secret with: openssl rand -base64 32
# Or just type a long random string of characters here.
JWT_SECRET="a_random_long_secret_key_change_this_for_production"
JWT_REFRESH_SECRET="another_random_long_secret_key"

# Frontend URL (For CORS and email links)
# Default for Vite dev server is http://localhost:5173
FRONTEND_URL="http://localhost:5173"

# ImageKit Storage
# Find these in ImageKit Dashboard > Developer Options
IMAGEKIT_PUBLIC_KEY="public_..."
IMAGEKIT_PRIVATE_KEY="private_..."
IMAGEKIT_URL_ENDPOINT="https://ik.imagekit.io/[YOUR_ID]"

# Stripe Payments
# Find these in Stripe Dashboard > Developers > API keys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email (Resend)
# Find this in Resend Dashboard
RESEND_API_KEY="re_..."
EMAIL_FROM="onboarding@resend.dev"
