# Production Environment Variables
# Copy this to .env in production

# Database (Neon / Supabase)
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# JWT Auth
JWT_SECRET="generate_a_very_long_random_string_here_commands_like_openssl_rand_base64_32"
JWT_REFRESH_SECRET="generate_another_long_random_string_here"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# API Configuration
PORT=3000
API_PREFIX="api/v1"
NODE_ENV="production"

# CORS (Frontend Domain)
ALLOWED_ORIGINS="https://your-frontend-domain.vercel.app,https://admin.yourdomain.com"

# Storage
# For image uploads. If using local (not recommended for serverless), leave empty.
# If using S3/Cloudinary, add their specific vars here and update Multer config in code.
# For 0â‚¬ setup, we recommend using public URLs in CSV imports initially.

# Payment Gateways (Optional)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
